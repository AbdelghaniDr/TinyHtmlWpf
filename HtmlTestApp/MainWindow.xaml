<Window x:Class="HtmlTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HtmlTestApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <TabControl>
        <TabItem Header="tab1">
            <local:WpfHtmlControl x:Name="HtmlControl" Background="Bisque" Foreground="LightGreen" Html="{Binding Html1}"></local:WpfHtmlControl>
        </TabItem>

        <TabItem Header="tab1">
            <local:WpfHtmlControl x:Name="HtmlControl2" Background="Bisque" FontFamily="Comic Sans MS" Foreground="Black" Html="{Binding Html2}"></local:WpfHtmlControl>
        </TabItem>
    </TabControl>
</Window>
